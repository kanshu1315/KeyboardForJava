<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="base_btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="base_rbtn_style" parent="base_btn_style">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/edit_text_size_big</item>
        <item name="android:paddingStart">@dimen/pay_r_btn_pading_h</item>
        <item name="android:paddingEnd">@dimen/pay_r_btn_pading_h</item>
        <item name="android:paddingTop">@dimen/pay_r_btn_pading_v</item>
        <item name="android:paddingBottom">@dimen/pay_r_btn_pading_v</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>


    <style name="common_rbtn_style" parent="base_rbtn_style">
        <item name="android:textColor">@color/text_selector_gray_blue</item>
        <item name="android:background">@drawable/selector_button_blue_bg</item>
        <item name="android:button">@null</item>
    </style>
    <!--发票信息输入页面：输入框样式-->
    <style name="invoice_email_et_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">4</item>
        <item name="android:background">@drawable/selector_edit_payment</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/selector_et_text</item>
    </style>
    <!--发票信息输入页面：项目名统一样式-->
    <style name="invoice_email_tag_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.3</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/edit_text_size_normal</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:maxLines">1</item>
    </style>


    <style name="cdr_item_tv_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:visibility">gone</item>
    </style>


</resources>
